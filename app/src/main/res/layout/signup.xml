<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:id="@+id/textView3"
                android:textSize="24sp" />

            <Button
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ins_id"
                android:hint="Insurance ID"
                android:layout_marginTop="18dp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/email_id"
                android:layout_alignLeft="@+id/email_id"
                android:layout_alignStart="@+id/email_id" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="18dp"
                android:id="@+id/Fname"
                android:hint="Name"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/Uname"
                android:hint="Username"
                android:layout_below="@+id/Fname"
                android:layout_alignLeft="@+id/Fname"
                android:layout_alignStart="@+id/Fname"
                android:layout_marginTop="18dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/con_pass"
                android:hint="Confirm Password"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/pass1"
                android:layout_alignLeft="@+id/pass1"
                android:layout_alignStart="@+id/pass1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass1"
                android:hint="Password"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/ins_id"
                android:layout_alignLeft="@+id/ins_id"
                android:layout_alignStart="@+id/ins_id" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_id"
                android:hint="Email Address"
                android:layout_below="@+id/Uname"
                android:layout_alignLeft="@+id/Uname"
                android:layout_alignStart="@+id/Uname"
                android:layout_marginTop="18dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>